{
    "name" : "drSlon/mage",
    "type" : "magento-module",
    "description" : "Slon module for Magento",
    "keywords" : ["magento", "mage", "slon"],
    "license" : "MIT",
    "authors" : [
        {
            "name"  : "Slon Team",
            "email" : "office@slon.com"
        }
    ],
    "require" : {
        "php": ">=5.3.3",
        "magento-hackathon/magento-composer-installer" : "*"
    },
    "require-dev" : {
	    "magento/core" : "1.9.0.1"
    },
    "minimum-stability" : "dev",
    "repositories" : [
        {
            "type" : "composer",
            "url"  : "http://packages.firegento.com"
        }
    ],
    "extra" : {
        "map" : [
			["public/app/code/community/Slon/Core", "app/code/community/Slon/Core"],
            ["public/app/etc/modules/Slon_Core.xml", "app/etc/modules/Slon_Core.xml"]
        ],
		"magento-root-dir" : "./public/",
        "magento-deploystrategy" : "symlink",
		"magento-force" : true,
		"auto-append-gitignore": true
    }
}
